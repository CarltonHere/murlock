{
  "name": "nestjs-lock",
  "version": "1.0.1",
  "author": "Eyüp Furkan Özmen",
  "license": "MIT",
  "description": "A lock package for NestJS using Redis",
  "private": false,
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "redis": "^3.1.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@types/node": "^20.3.1",
    "@types/redis": "^2.8.32",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "<rootDir>/**/*.ts"
    ],
    "coverageDirectory": "../coverage",
    "collectCoverage": true,
    "testEnvironment": "node",
    "verbose": true,
    "maxWorkers": "20%"
  },
  "keywords": [
    "nestjs",
    "lock",
    "redis",
    "murlock"
  ]
}
